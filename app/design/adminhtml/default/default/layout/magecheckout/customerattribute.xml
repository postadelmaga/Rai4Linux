<layout version="0.1.0">
    <!--Customer Attribute-->
    <adminhtml_customer_attribute_index>
        <reference name="content">
            <block type="customerattribute/adminhtml_customer_attribute" name="customer.attribute"/>
        </reference>
    </adminhtml_customer_attribute_index>
    <adminhtml_customer_attribute_edit>
        <update handle="scope_switcher"/>
    </adminhtml_customer_attribute_edit>
    <adminhtml_customer_attribute_new>
        <update handle="scope_switcher"/>
    </adminhtml_customer_attribute_new>
    <!--\Customer Attribute-->
    <!--Customer Address Attribute-->
    <adminhtml_customer_address_attribute_index>
        <reference name="content">
            <block type="customerattribute/adminhtml_customer_address_attribute" name="customer.address.attribute"/>
        </reference>
    </adminhtml_customer_address_attribute_index>
    <adminhtml_customer_address_attribute_edit>
        <update handle="scope_switcher"/>
    </adminhtml_customer_address_attribute_edit>
    <adminhtml_customer_address_attribute_new>
        <update handle="scope_switcher"/>
    </adminhtml_customer_address_attribute_new>
    <!--Website switcher-->
    <scope_switcher>
        <block type="customerattribute/adminhtml_customer_form_field_element" name="fieldset_element_renderer" template="magecheckout/customerattribute/customer/form/field/element.phtml"/>
        <reference name="left">
            <block type="adminhtml/store_switcher" name="website_switcher" before="-" template="magecheckout/customerattribute/customer/form/website/switcher.phtml">
                <action method="setStoreVarName">
                    <value>website</value>
                </action>
                <action method="setDefaultStoreName" translate="name">
                    <name>Default Values</name>
                </action>
            </block>
        </reference>
    </scope_switcher>
</layout>