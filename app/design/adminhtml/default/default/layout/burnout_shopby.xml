<?xml version="1.0"?>
<layout version="0.1.0">

    <adminhtml_catalog_product_attribute_edit>
        <reference name="attribute_edit_tabs">
            <block type="burnout_shopby/adminhtml_attribute_edit_tab_shopBy"
                   as="attribute_shopby_tab" name="attribute_shopby_tab_name">
                <block type="burnout_shopby/adminhtml_attribute_edit_switcher"
                       template="burnout_shopby/attribute/edit/store_switcher.phtml" as="attribute_store_switch"
                       name="store_switcher_shopby"/>
            </block>
            <action method="addTabAfter">
                <tab_id>attribute_burnout_shopby</tab_id>
                <block_name>attribute_shopby_tab</block_name>
                <after>labels</after>
            </action>
        </reference>
    </adminhtml_catalog_product_attribute_edit>

    <adminhtml_shopby_attributeselect>
        <reference name="content">
            <block type="burnout_shopby/adminhtml_shopBy_attribute_select" name="shopby.attribute.select"/>
        </reference>
    </adminhtml_shopby_attributeselect>

    <adminhtml_shopby_index>
        <reference name="content">
            <block type="burnout_shopby/adminhtml_shopBy" name="shopby">
                <block type="burnout_shopby/adminhtml_shopBy_store_switcher" name="store_switcher" as="store_switcher">
                    <action method="setUseConfirm">
                        <params>0</params>
                    </action>
                </block>
                <block type="burnout_shopby/adminhtml_shopBy_grid" name="shopby.grid" as="grid"/>
            </block>
        </reference>
    </adminhtml_shopby_index>

    <adminhtml_shopby_edit>
        <update handle="editor"/>

        <reference name="content">
            <block type="burnout_shopby/adminhtml_shopBy_edit" name="optionpage.edit"/>
        </reference>
        <reference name="left">
            <block type="burnout_shopby/adminhtml_shopBy_edit_tabs" name="optionpage.tabs"/>
        </reference>

    </adminhtml_shopby_edit>

    <adminhtml_imagechooser_index>
        <remove name="footer"/>
        <remove name="head"/>
        <reference name="left">
            <block name="wysiwyg_images.js" type="adminhtml/cms_wysiwyg_images_content"
                   template="cms/browser/js.phtml"/>
            <block name="wysiwyg_images.tree" type="adminhtml/cms_wysiwyg_images_tree"
                   template="cms/browser/tree.phtml"/>
        </reference>
        <reference name="content">
            <block name="wysiwyg_images.content" type="adminhtml/cms_wysiwyg_images_content"
                   template="cms/browser/content.phtml">
                <block name="wysiwyg_images.uploader" type="adminhtml/cms_wysiwyg_images_content_uploader"
                       template="cms/browser/content/uploader.phtml"/>
                <block name="wysiwyg_images.newfolder" type="adminhtml/cms_wysiwyg_images_content_newfolder"
                       template="cms/browser/content/newfolder.phtml"/>
            </block>
        </reference>
    </adminhtml_imagechooser_index>

    <adminhtml_imagechooser_contents>
        <block name="wysiwyg_images.files" type="adminhtml/cms_wysiwyg_images_content_files"
               template="cms/browser/content/files.phtml" output="toHtml"/>
    </adminhtml_imagechooser_contents>

</layout>
